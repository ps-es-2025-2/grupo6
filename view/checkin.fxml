<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CheckinController">
   <center>
      <TableView fx:id="tabela" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="80.0" text="ID"/>
            <TableColumn fx:id="placaCol" prefWidth="180.0" text="Placa"/>
            <TableColumn fx:id="vagaCol" prefWidth="180.0" text="Vaga"/>
            <TableColumn fx:id="entradaCol" prefWidth="200.0" text="Entrada"/>
            <TableColumn fx:id="observacaoCol" prefWidth="220.0" text="Observação"/>
         </columns>
      </TableView>
   </center>
   <bottom>
      <BorderPane>
         <padding>
            <Insets bottom="12" left="12" right="12" top="12"/>
         </padding>
         <center>
            <GridPane hgap="12" vgap="8">
               <Label text="Veículo"/>
               <ComboBox fx:id="veiculoCombo" prefWidth="250.0" GridPane.columnIndex="1"/>
               <Label text="Vaga" GridPane.rowIndex="1"/>
               <ComboBox fx:id="vagaCombo" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
               <Label text="Data Entrada" GridPane.rowIndex="2"/>
               <DatePicker fx:id="entradaDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
               <Label text="Hora Entrada" GridPane.rowIndex="3"/>
               <TextField fx:id="entradaHoraField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
               <Label text="Observação" GridPane.rowIndex="4"/>
               <TextArea fx:id="observacaoArea" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10">
               <Button fx:id="adicionarButton" onAction="#onAdicionar" text="Novo"/>
               <Button fx:id="atualizarButton" onAction="#onAtualizar" text="Editar"/>
               <Button fx:id="deletarButton" onAction="#onDeletar" text="Excluir"/>
               <Button fx:id="confirmarButton" onAction="#onConfirmar" text="Confirmar"/>
               <Button fx:id="cancelarButton" onAction="#onCancelar" text="Cancelar"/>
            </HBox>
         </bottom>
      </BorderPane>
   </bottom>
</BorderPane>


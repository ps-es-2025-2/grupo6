<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PagamentoController">
   <center>
      <TableView fx:id="tabela" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="60.0" text="ID"/>
            <TableColumn fx:id="checkoutCol" prefWidth="220.0" text="Checkout"/>
            <TableColumn fx:id="metodoCol" prefWidth="120.0" text="Método"/>
            <TableColumn fx:id="statusCol" prefWidth="120.0" text="Status"/>
            <TableColumn fx:id="valorCol" prefWidth="120.0" text="Valor"/>
            <TableColumn fx:id="dataCol" prefWidth="200.0" text="Data Pagamento"/>
         </columns>
      </TableView>
   </center>
   <bottom>
      <BorderPane>
         <padding>
            <Insets bottom="12" left="12" right="12" top="12"/>
         </padding>
         <center>
            <GridPane hgap="12" vgap="8">
               <Label text="Checkout"/>
               <ComboBox fx:id="checkoutCombo" onAction="#onCheckoutChanged" prefWidth="260.0" GridPane.columnIndex="1"/>
               <Label text="Método" GridPane.rowIndex="1"/>
               <ComboBox fx:id="metodoCombo" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
               <Label text="Status" GridPane.rowIndex="2"/>
               <ComboBox fx:id="statusCombo" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
               <Label text="Data" GridPane.rowIndex="3"/>
               <DatePicker fx:id="dataPicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
               <Label text="Hora" GridPane.rowIndex="4"/>
               <TextField fx:id="horaField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
               <Label text="Valor Pago" GridPane.rowIndex="5"/>
               <Label fx:id="valorCalculadoLabel" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10">
               <Button fx:id="adicionarButton" onAction="#onAdicionar" text="Novo"/>
               <Button fx:id="atualizarButton" onAction="#onAtualizar" text="Editar"/>
               <Button fx:id="deletarButton" onAction="#onDeletar" text="Excluir"/>
               <Button fx:id="confirmarButton" onAction="#onConfirmar" text="Confirmar"/>
               <Button fx:id="cancelarButton" onAction="#onCancelar" text="Cancelar"/>
            </HBox>
         </bottom>
      </BorderPane>
   </bottom>
</BorderPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.PagamentoController">

    <!-- TABELA -->
    <center>
        <TableView fx:id="tabela" prefHeight="300">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="70"/>
                <TableColumn fx:id="tipoCol" text="Tipo" prefWidth="150"/>
                <TableColumn fx:id="valorCol" text="Valor" prefWidth="120"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
                <TableColumn fx:id="dataCol" text="Data Pagamento" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <!-- ÃREA INFERIOR -->
    <bottom>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Tipo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="codigoField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Valor:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="valorField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Aprovado:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <CheckBox fx:id="statusCheck" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button fx:id="atualizarStatusButton" text="Atualizar Status"
                        onAction="#onAtualizarStatus"/>

                <Button fx:id="cancelarButton" text="Cancelar"
                        onAction="#onCancelar"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>


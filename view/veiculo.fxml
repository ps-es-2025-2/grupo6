<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VeiculoController">
   <center>
      <TableView fx:id="tabela" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="placaCol" prefWidth="150.0" text="Placa"/>
            <TableColumn fx:id="modeloCol" prefWidth="200.0" text="Modelo"/>
            <TableColumn fx:id="corCol" prefWidth="150.0" text="Cor"/>
            <TableColumn fx:id="proprietarioCol" prefWidth="250.0" text="Proprietário"/>
         </columns>
      </TableView>
   </center>
   <bottom>
      <BorderPane>
         <padding>
            <Insets bottom="12" left="12" right="12" top="12"/>
         </padding>
         <center>
            <GridPane hgap="12" vgap="8">
               <columnConstraints>
                  <ColumnConstraints minWidth="120.0" prefWidth="140.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               <Label text="Placa"/>
               <TextField fx:id="placaField" GridPane.columnIndex="1"/>
               <Label text="Modelo" GridPane.rowIndex="1"/>
               <TextField fx:id="modeloField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
               <Label text="Cor" GridPane.rowIndex="2"/>
               <TextField fx:id="corField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
               <Label text="Proprietário" GridPane.rowIndex="3"/>
               <TextField fx:id="proprietarioField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10">
               <Button fx:id="adicionarButton" onAction="#onAdicionar" text="Novo"/>
               <Button fx:id="atualizarButton" onAction="#onAtualizar" text="Editar"/>
               <Button fx:id="deletarButton" onAction="#onDeletar" text="Excluir"/>
               <Button fx:id="confirmarButton" onAction="#onConfirmar" text="Confirmar"/>
               <Button fx:id="cancelarButton" onAction="#onCancelar" text="Cancelar"/>
            </HBox>
         </bottom>
      </BorderPane>
   </bottom>
</BorderPane>

